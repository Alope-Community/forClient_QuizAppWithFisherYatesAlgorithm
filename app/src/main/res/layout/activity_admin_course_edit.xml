<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_course_activity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Header dengan tombol kembali -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp"
        android:paddingTop="30dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Kembali"
            android:clickable="true"
            android:focusable="true"
            android:padding="4dp"
            app:tint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Materi"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- Konten ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter course title"
                android:maxLength="100"
                android:inputType="text"/>

            <!--    Image   -->
            <ImageView
                android:id="@+id/imagePreview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="#EEEEEE"
                android:contentDescription="Preview Gambar"
                android:visibility="gone" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonUploadImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Cover (Optional)"
                android:layout_marginTop="8dp"
                android:background="#f9a7a7"
                android:textColor="#FFFFFF"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="20dp"
                android:stateListAnimator="@null"
                android:layout_gravity="center"/>

            <!-- Audio Upload Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <!-- Upload Audio Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonUploadVoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Suara"
                    android:layout_marginTop="8dp"
                    android:background="#f9a7a7"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:stateListAnimator="@null"
                    android:layout_gravity="center"/>

                <!-- Audio Control Panel (Hidden by default) -->
                <LinearLayout
                    android:id="@+id/audioControlPanel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#F5F5F5"
                    android:padding="12dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <!-- Audio Info -->
                    <TextView
                        android:id="@+id/audioFileName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Audio File Selected"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333"
                        android:layout_marginBottom="8dp"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                    <!-- Control Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- Play/Pause Button -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/buttonPlayPause"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="▶ Play"
                            android:background="#4CAF50"
                            android:textColor="#FFFFFF"
                            android:layout_marginEnd="8dp"
                            android:stateListAnimator="@null"/>

                        <!-- Cancel Button -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/buttonCancelAudio"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="✕ Cancel"
                            android:background="#F44336"
                            android:textColor="#FFFFFF"
                            android:layout_marginStart="8dp"
                            android:stateListAnimator="@null"/>

                    </LinearLayout>

                    <!-- Progress Bar -->
                    <ProgressBar
                        android:id="@+id/audioProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:max="100"
                        android:progress="0"
                        android:visibility="gone"/>

                </LinearLayout>
            </LinearLayout>

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>
            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter short description"
                android:maxLength="255"
                android:inputType="text"/>

            <!-- Body -->
            <jp.wasabeef.richeditor.RichEditor
                android:id="@+id/editor"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@android:color/white"
                android:layout_marginTop="8dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:weightSum="4">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="B"
                    android:textStyle="bold"
                    android:background="#a4c9ff"
                    app:backgroundTint="#a4c9ff"
                    android:textColor="@color/black"
                    android:onClick="setBold" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="I"
                    android:textStyle="italic"
                    android:background="#ffea92"
                    app:backgroundTint="#ffea92"
                    android:textColor="@color/black"
                    android:onClick="setItalic" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="H1"
                    android:background="#7ccad0"
                    app:backgroundTint="#7ccad0"
                    android:onClick="setHeading1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="UL"
                    android:background="#f9a7a7"
                    app:backgroundTint="#f9a7a7"
                    android:onClick="setUnorderedList" />
            </LinearLayout>


            <!-- Submit Button -->
            <!--            <Button-->
            <!--                android:id="@+id/btnSubmitCourse"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="Create Course"-->
            <!--                android:textAllCaps="false"-->
            <!--                android:layout_marginTop="24dp"-->
            <!--                android:backgroundTint="#2196F3"-->
            <!--                android:textColor="#fff"/>-->

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubmitCourse"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_button"
                android:text="Save"
                android:textColor="#000" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
